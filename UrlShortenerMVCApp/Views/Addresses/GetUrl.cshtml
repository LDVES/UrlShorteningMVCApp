@model UrlShortenerMVCApp.TagHelpers.GetUrlHelper

@{
    ViewData["Title"] = "GenerateUrl";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-lg-6 p-4 mt-3" style="background-color: #2A2C2D;">
        <h1 class="display-4 text-center mb-3 ">Generated Url</h1>


        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.GeneratedUrl)" id="url" readonly />

        
        <br />
        <div class="d-flex flex-row justify-content-between">
        <button class="btn btn-outline-primary" onclick="CopyUrl()">Copy</button>
        
        <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
        </div>
        <script>
            CopyUrl = () => {
                let urlToCopy = document.getElementById("url");
                urlToCopy.select();
                urlToCopy.setSelectionRange(0, 99999);
                document.execCommand("copy");
            }

        </script>


    </div>

    <div class="col-md-3"></div>
</div>
