@model IEnumerable<UrlShortenerMVCApp.Models.Address>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mt-3 display-3">Added Urls</h1>


    <a asp-action="Create" class="btn btn-outline-success mb-3 mt-1">Create New</a>
    
@if (Model.ToList().Count() > 0)
{


<table class="table table-responsive-sm table-dark table-bordered text-white">
    <thead>
        <tr class="bg-info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                Actions
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info m-1">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary m-1">Details</a> 
                <a asp-action="GetUrl" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary m-1">GenerateUrl</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger m-1">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
    <h4 class="text-light text-center">Nothing to display!</h4>
}