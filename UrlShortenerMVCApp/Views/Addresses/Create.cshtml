@model UrlShortenerMVCApp.Models.Address

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-lg-6 p-4 mt-3" style="background-color: #2A2C2D;">
        <h1 class="display-4 text-center">Create</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"  placeholder="Localhost" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" placeholder="https://localhost:80" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="d-flex flex-row justify-content-lg-between">
                    <input type="submit" value="Create" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
                </div>
                </div>
</form>
    </div>
    <div class="col-md-3"></div>
</div>


    


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
